---

<Layout title={serviceDetails.title}>
  <Header />
  
  <main class="pt-16">
    <!-- Service Introduction Section -->
    <section class="relative bg-gradient-to-r from-pink-500 to-purple-600 text-white py-20 overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-20" style="background-image: url('data:image/svg+xml;charset=utf-8,<svg xmlns=&quot;http://www.w3.org/2000/svg&quot; viewBox=&quot;0 0 1200 600&quot;><defs><linearGradient id=&quot;grad1&quot; x1=&quot;0%&quot; y1=&quot;0%&quot; x2=&quot;100%&quot; y2=&quot;100%&quot;><stop offset=&quot;0%&quot; style=&quot;stop-color:%23ffffff;stop-opacity:0.1&quot; /><stop offset=&quot;100%&quot; style=&quot;stop-color:%23ffffff;stop-opacity:0.05&quot; /></linearGradient></defs><rect width=&quot;1200&quot; height=&quot;600&quot; fill=&quot;url(%23grad1)&quot; /><circle cx=&quot;300&quot; cy=&quot;100&quot; r=&quot;50&quot; fill=&quot;%23ffffff&quot; opacity=&quot;0.1&quot; /><circle cx=&quot;700&quot; cy=&quot;250&quot; r=&quot;80&quot; fill=&quot;%23ffffff&quot; opacity=&quot;0.08&quot; /><circle cx=&quot;1050&quot; cy=&quot;150&quot; r=&quot;60&quot; fill=&quot;%23ffffff&quot; opacity=&quot;0.12&quot; /><rect x=&quot;150&quot; y=&quot;350&quot; width=&quot;120&quot; height=&quot;120&quot; rx=&quot;20&quot; fill=&quot;%23ffffff&quot; opacity=&quot;0.06&quot; /><polygon points=&quot;500,450 600,400 700,500 600,550&quot; fill=&quot;%23ffffff&quot; opacity=&quot;0.08&quot; /></svg>');">
      </div>
      
      <!-- Content -->
      <div class="container relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6 drop-shadow-lg">{serviceDetails.title}</h1>
          <p class="text-xl md:text-2xl mb-8 text-pink-100 drop-shadow-md">{serviceDetails.subtitle}</p>
          <p class="text-lg leading-relaxed drop-shadow-sm">{serviceDetails.description}</p>
        </div>
      </div>
    </section>

    <!-- Service Features -->
    <section class="py-20 bg-white">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Service Features</h2>
          <p class="text-xl text-gray-600">Comprehensive social media management solutions</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {serviceDetails.features.map(feature => (
            <div class="text-center p-6 bg-gray-50 rounded-xl hover:shadow-lg transition-shadow duration-300">
              <div class="text-4xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Platform Coverage -->
    <section class="py-20 bg-gray-50">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Platform Coverage</h2>
          <p class="text-xl text-gray-600">Covering Chinese and international mainstream social media platforms, precisely reaching Cambodian local users</p>
        </div>
        
        <!-- Chinese Social Media Platforms -->
        <div class="mb-16">
          <div class="text-center mb-8">
            <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">üá®üá≥ Chinese Social Media Platforms</h3>
            <p class="text-lg text-gray-600">Serving Chinese user communities in Cambodia, building brand influence</p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {serviceDetails.chinesePlatforms.map(platform => (
              <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
                <div class="flex items-center mb-4">
                  <div class="text-3xl mr-4">{platform.icon}</div>
                  <h4 class="text-xl font-bold text-gray-900">{platform.name}</h4>
                </div>
                <p class="text-gray-600 mb-4">{platform.description}</p>
                <ul class="space-y-2">
                  {platform.features.map(feature => (
                    <li class="flex items-center text-sm text-gray-700">
                      <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
