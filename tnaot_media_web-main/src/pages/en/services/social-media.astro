          <p class="text-xl text-gray-600">Choose the operation package that suits your needs</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {serviceDetails.packages.map(pkg => (
            <div class={`bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 ${pkg.popular ? 'ring-2 ring-pink-500 relative' : ''}`}>
              {pkg.popular && (
                <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                  <span class="bg-pink-500 text-white px-4 py-2 rounded-full text-sm font-medium">Recommended</span>
                </div>
              )}
              <div class="text-center mb-6">
                <h3 class="text-2xl font-bold text-gray-900 mb-2">{pkg.name}</h3>
                <div class="text-4xl font-bold text-pink-600 mb-2">{pkg.price}</div>
                <p class="text-gray-600">{pkg.description}</p>
              </div>
              <ul class="space-y-3 mb-8">
                {pkg.features.map(feature => (
                  <li class="flex items-center">
                    <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-gray-700">{feature}</span>
                  </li>
                ))}
              </ul>
              <button class={`w-full py-3 px-6 rounded-lg font-semibold transition-colors duration-200 ${pkg.popular ? 'bg-pink-600 text-white hover:bg-pink-700' : 'bg-gray-100 text-gray-900 hover:bg-gray-200'}`}>
                Choose Package
              </button>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Service Process -->
    <section class="py-20 bg-gray-50">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Service Process</h2>
          <p class="text-xl text-gray-600">Scientific operational process ensuring optimal results</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {serviceDetails.process.map((step, index) => (
            <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-pink-600 text-white rounded-full flex items-center justify-center font-bold text-lg mr-4">
                  {step.step}
                </div>
                <h3 class="text-xl font-bold text-gray-900">{step.title}</h3>
              </div>
              <p class="text-gray-600">{step.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Success Cases -->
    <section class="py-20 bg-white">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Success Cases</h2>
          <p class="text-xl text-gray-600">The value we create for our clients</p>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          {serviceDetails.cases.map(caseItem => (
            <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
              <img src={caseItem.image} alt={caseItem.title} class="w-full h-48 object-cover" />
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-3">{caseItem.title}</h3>
                <p class="text-gray-600 mb-4">{caseItem.description}</p>
                <div class="grid grid-cols-2 gap-2">
                  {caseItem.results.map(result => (
                    <div class="text-center p-2 bg-pink-50 rounded-lg">
                      <div class="text-xs text-pink-600 font-medium">{result}</div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-pink-600 py-16">
      <div class="container">
        <div class="text-center text-white">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Enhance Your Social Media Influence?</h2>
          <p class="text-xl mb-8 text-pink-100">Contact us to get professional social media management solutions</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/en/contact" class="bg-white text-pink-600 hover:bg-gray-100 font-semibold py-3 px-8 rounded-lg transition-colors duration-200">
              Get Consultation Now
            </a>
            <a href="/en/services" class="border-2 border-white text-white hover:bg-white hover:text-pink-600 font-semibold py-3 px-8 rounded-lg transition-colors duration-200">
              View Other Services
