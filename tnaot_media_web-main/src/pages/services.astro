// 服务链接映射函数
function getServiceLink(categoryId: string, serviceTitle: string): string {
  // 媒体投稿与采访服务
  if (categoryId === 'media') {
    if (serviceTitle.includes('媒体投稿') || serviceTitle.includes('媒体采访') || serviceTitle.includes('新闻发布') || serviceTitle.includes('危机公关')) {
      return '/services/media-publishing';
    }
  }
  // 创意制作服务
  else if (categoryId === 'creative') {
    if (serviceTitle.includes('视频制作')) {
      return '/services/video-production';
    }
    // 其他创意服务暂时链接到视频制作页面
    return '/services/video-production';
  }
  // 活动策划与执行
  else if (categoryId === 'events') {
    return '/services/event-planning';
  }
  // 数字营销服务
  else if (categoryId === 'marketing') {
    if (serviceTitle.includes('社交媒体')) {
      return '/services/social-media';
    }
    // 其他营销服务暂时链接到社交媒体页面
    return '/services/social-media';
  }
  // 技术服务
  else if (categoryId === 'tech') {
    return '/services/digital-tech';
  }
  
  // 默认返回联系页面
  return '/contact';
}

