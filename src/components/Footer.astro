---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-white text-gray-900">
  <div class="container">
    <!-- 主要内容区域 -->
    <div class="py-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- 公司信息 -->
      <div class="lg:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-8 h-8 bg-red-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-xs">T</span>
          </div>
          <span class="text-xl font-bold">TNAOT</span>
        </div>
        <p class="text-gray-600 mb-4 max-w-md">
          {t('footer.company.description')}
        </p>
        <div class="space-y-2 mb-6">
          <div class="flex items-center space-x-2">
            <svg class="h-5 w-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span class="text-gray-600">{t('footer.contact.phone')}: (+855) 023922788</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="h-5 w-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span class="text-gray-600">{t('footer.contact.email')}: info@tnaot.com</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="h-5 w-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="text-gray-600">{t('footer.contact.address')}: {lang === 'zh' ? 'Lot No.358, Samdach Sothearos Blvd, Phum 8, Sangkat Tonle Bassac, Khan Chamkarmon, Phnom Penh' : 'Lot No.358, Samdach Sothearos Blvd, Phum 8, Sangkat Tonle Bassac, Khan Chamkarmon, Phnom Penh'}</span>
          </div>
        </div>
        
        <!-- 社交媒体图标 -->
        <div>
          <h4 class="text-sm font-semibold text-gray-900 mb-3">{lang === 'zh' ? '关注我们' : 'Follow Us'}</h4>
          <div class="flex space-x-4">
            <a href="#" class="text-red-600 hover:text-red-800 transition-colors" title="微信">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8.691 2.188C3.891 2.188 0 5.476 0 9.53c0 2.212 1.17 4.203 3.002 5.55a.59.59 0 01.213.665l-.39 1.48c-.019.07-.048.141-.048.213 0 .163.13.295.29.295a.326.326 0 00.167-.054l1.903-1.114a.864.864 0 01.717-.098 10.16 10.16 0 002.837.403c.276 0 .543-.027.811-.05-.857-2.578.157-4.972 1.932-6.446 1.703-1.415 3.882-1.98 5.853-1.838-.576-3.583-4.196-6.348-8.596-6.348zM5.785 5.991c.642 0 1.162.529 1.162 1.18 0 .659-.52 1.188-1.162 1.188-.642 0-1.162-.529-1.162-1.188 0-.651.52-1.18 1.162-1.18zm5.813 0c.642 0 1.162.529 1.162 1.18 0 .659-.52 1.188-1.162 1.188-.642 0-1.162-.529-1.162-1.188 0-.651.52-1.18 1.162-1.18z"/>
                <path d="M15.999 9.68c-4.906 0-8.891 3.13-8.891 6.992 0 2.227 1.335 4.215 3.407 5.463a.83.83 0 01.305.934l-.55 1.617c-.027.08-.067.199-.067.299 0 .229.183.415.408.415.067 0 .134-.021.194-.061l2.67-1.563a1.217 1.217 0 01.998-.138c.67.134 1.357.201 2.052.201 4.906 0 8.891-3.13 8.891-6.992 0-3.862-3.985-6.992-8.891-6.992zm-2.944 4.675c-.715 0-1.295-.58-1.295-1.295s.58-1.295 1.295-1.295 1.295.58 1.295 1.295-.58 1.295-1.295 1.295zm5.888 0c-.715 0-1.295-.58-1.295-1.295s.58-1.295 1.295-1.295 1.295.58 1.295 1.295-.58 1.295-1.295 1.295z"/>
              </svg>
            </a>
            <a href="#" class="text-red-600 hover:text-red-800 transition-colors" title="微博">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9.31 16.242c-2.206 0-4.126-1.143-4.126-2.663 0-1.113 1.27-2.1 2.954-2.1 1.917 0 4.032 1.077 4.032 2.663 0 1.407-1.188 2.1-2.86 2.1zm8.931-8.074c-.292-.02-.492-.04-.69-.06-.178-.02-.356-.06-.534-.1a.243.243 0 01-.178-.297c.02-.178.118-.297.297-.297.534.06 1.068.139 1.602.238.178.02.297.178.297.356-.02.178-.118.297-.297.297-.178-.02-.356-.04-.497-.137zm-1.424 2.663c-.534-.06-1.068-.139-1.602-.238-.178-.02-.297-.178-.297-.356.02-.178.118-.297.297-.297.534.06 1.068.139 1.602.238.178.02.297.178.297.356-.02.178-.118.297-.297.297zm-6.527 6.527c-3.56 0-6.447-2.287-6.447-5.103 0-2.816 2.887-5.103 6.447-5.103s6.447 2.287 6.447 5.103c0 2.816-2.887 5.103-6.447 5.103zm0-8.766c-2.816 0-5.103 1.602-5.103 3.663 0 2.061 2.287 3.663 5.103 3.663s5.103-1.602 5.103-3.663c0-2.061-2.287-3.663-5.103-3.663z"/>
              </svg>
            </a>
            <a href="#" class="text-red-600 hover:text-red-800 transition-colors" title="抖音">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.53.02C13.84 0 15.14.01 16.44 0c.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
              </svg>
            </a>
            <a href="#" class="text-red-600 hover:text-red-800 transition-colors" title="LinkedIn">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- 快速链接 -->
      <div>
          <h3 class="text-lg font-semibold mb-4 text-gray-900">{t('footer.links.title')}</h3>
        <ul class="space-y-2">
          <li><a href={lang === 'zh' ? '/' : '/en'} class="text-gray-600 hover:text-red-600 transition-colors">{t('footer.links.home')}</a></li>
          <li><a href={lang === 'zh' ? '/about' : '/en/about'} class="text-gray-600 hover:text-red-600 transition-colors">{t('footer.links.about')}</a></li>
          <li><a href={lang === 'zh' ? '/services' : '/en/services'} class="text-gray-600 hover:text-red-600 transition-colors">{t('footer.links.services')}</a></li>
          <li><a href={lang === 'zh' ? '/contact' : '/en/contact'} class="text-gray-600 hover:text-red-600 transition-colors">{t('footer.links.contact')}</a></li>
        </ul>
      </div>

      <!-- 服务项目 -->
      <div>
          <h3 class="text-lg font-semibold mb-4 text-gray-900">{lang === 'zh' ? '核心服务' : 'Core Services'}</h3>
        <ul class="space-y-2">
          <li><a href={lang === 'zh' ? '/services/media-publishing' : '/en/services/media-publishing'} class="text-gray-600 hover:text-red-600 transition-colors">{t('nav.services.media')}</a></li>
          <li><a href={lang === 'zh' ? '/services/event-planning' : '/en/services/event-planning'} class="text-gray-600 hover:text-red-600 transition-colors">{t('nav.services.events')}</a></li>
          <li><a href={lang === 'zh' ? '/services/video-production' : '/en/services/video-production'} class="text-gray-600 hover:text-red-600 transition-colors">{t('nav.services.video')}</a></li>
          <li><a href={lang === 'zh' ? '/services/social-media' : '/en/services/social-media'} class="text-gray-600 hover:text-red-600 transition-colors">{t('nav.services.social')}</a></li>
          <li><a href={lang === 'zh' ? '/products' : '/en/products'} class="text-gray-600 hover:text-red-600 transition-colors">{t('nav.services.ads')}</a></li>
        </ul>
      </div>
    </div>

    <!-- 底部版权信息 -->
    <div class="border-t border-gray-200 pt-8 pb-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-500 text-sm mb-4 md:mb-0">
          © 2024 TNAOT. {t('footer.copyright')}
        </p>
        <div class="flex space-x-6 text-sm">
          <a href="#" class="text-gray-600 hover:text-red-600 transition-colors">{t('footer.legal.privacy')}</a>
          <a href="#" class="text-gray-600 hover:text-red-600 transition-colors">{t('footer.legal.terms')}</a>
          <a href="#" class="text-gray-600 hover:text-red-600 transition-colors">{t('footer.legal.cookies')}</a>
        </div>
      </div>
    </div>
  </div>
</footer>