  <script>
    // 图片轮播功能
    document.addEventListener('DOMContentLoaded', function() {
      const slideshows = document.querySelectorAll('.slideshow-container');
      
      slideshows.forEach(slideshow => {
        const slides = slideshow.querySelectorAll('.slide');
        const prevBtn = slideshow.querySelector('.prev');
        const nextBtn = slideshow.querySelector('.next');
        const dots = slideshow.querySelectorAll('.dot');
        let currentSlide = 0;
        let slideInterval: ReturnType<typeof setInterval> | null = null;
        
        // 显示指定幻灯片
        function showSlide(index: number) {
          slides.forEach((slide, i) => {
            const slideElement = slide as HTMLElement;
            if (i === index) {
              slideElement.style.opacity = '1';
              slideElement.style.zIndex = '10';
            } else {
              slideElement.style.opacity = '0';
              slideElement.style.zIndex = '1';
            }
          });
          
          dots.forEach((dot, i) => {
            const dotElement = dot as HTMLElement;
            if (i === index) {
              dotElement.classList.remove('bg-opacity-50');
              dotElement.classList.add('bg-white');
            } else {
              dotElement.classList.add('bg-opacity-50');
              dotElement.classList.remove('bg-white');
            }
          });
          
          currentSlide = index;
        }
        
        // 下一张幻灯片
        function nextSlide() {
          const next = (currentSlide + 1) % slides.length;
          showSlide(next);
        }
        
        // 上一张幻灯片
        function prevSlide() {
          const prev = (currentSlide - 1 + slides.length) % slides.length;
          showSlide(prev);
        }
        
        // 开始自动播放
        function startAutoPlay() {
          slideInterval = setInterval(nextSlide, 4000); // 每4秒切换一次
        }
        
        // 停止自动播放
        function stopAutoPlay() {
          if (slideInterval) {
            clearInterval(slideInterval);
          }
        }
        
        // 事件监听器
        if (nextBtn) {
          nextBtn.addEventListener('click', (e) => {
            e.preventDefault();
            nextSlide();
            stopAutoPlay();
            startAutoPlay(); // 重新开始自动播放
          });
        }
        
        if (prevBtn) {
          prevBtn.addEventListener('click', (e) => {
            e.preventDefault();
            prevSlide();
            stopAutoPlay();
            startAutoPlay(); // 重新开始自动播放
          });
        }
        
        // 指示器点击事件
        dots.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            showSlide(index);
            stopAutoPlay();
            startAutoPlay(); // 重新开始自动播放
          });
        });
        
        // 鼠标悬停时暂停自动播放
        slideshow.addEventListener('mouseenter', stopAutoPlay);
        slideshow.addEventListener('mouseleave', startAutoPlay);
        
        // 初始化
        if (slides.length > 1) {
          showSlide(0);
          startAutoPlay();
        }
      });
    });
  </script>

