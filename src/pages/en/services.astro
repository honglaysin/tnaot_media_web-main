// Service Link Mapping Function
function getServiceLink(categoryId: string, serviceTitle: string): string {
  // Media Publishing & Interview Services
  if (categoryId === 'media') {
    if (serviceTitle.includes('Media Publishing') || serviceTitle.includes('Media Interview') || serviceTitle.includes('Press Release') || serviceTitle.includes('Crisis PR')) {
      return '/en/services/media-publishing';
    }
  }
  // Creative Production Services
  else if (categoryId === 'creative') {
    if (serviceTitle.includes('Video Production')) {
      return '/en/services/video-production';
    }
    // Other creative services temporarily link to video production page
    return '/en/services/video-production';
  }
  // Event Planning & Execution
  else if (categoryId === 'events') {
    return '/en/services/event-planning';
  }
  // Digital Marketing Services
  else if (categoryId === 'marketing') {
    if (serviceTitle.includes('Social Media')) {
      return '/en/services/social-media';
    }
    // Other marketing services temporarily link to social media page
    return '/en/services/social-media';
  }
  // Technical Services
  else if (categoryId === 'tech') {
    return '/en/services/digital-tech';
  }
  
  // Default return to contact page
  return '/en/contact';
}

