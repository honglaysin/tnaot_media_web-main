---

<Layout title={`${t('nav.products')} - ${t('brand.name')}`} description="Explore KOH's innovative products and solutions, providing powerful digital tools and platforms for your business.">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative text-white overflow-hidden" style="background: linear-gradient(135deg, #fa4646 0%, #e03e3e 50%, #c73636 100%)">
      <!-- Background image -->
      <div class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-80" style="background-image: url('/hero/produce.jpg');"></div>
      
      <!-- Gradient overlay -->
      <div class="absolute inset-0" style="background: linear-gradient(135deg, rgba(250, 70, 70, 0.7) 0%, rgba(224, 62, 62, 0.6) 50%, rgba(199, 54, 54, 0.7) 100%);"></div>
      
      <!-- Main content -->
      <div class="container relative z-10 py-32">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Left content -->
          <div class="space-y-8">
            <div class="space-y-6">
              <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm font-medium">
                <span class="w-2 h-2 bg-green-400 rounded-full mr-2 animate-pulse"></span>
                Product Matrix Showcase
              </div>
              <h1 class="text-4xl lg:text-6xl font-bold leading-tight">
                 <span class="block">Cambodia Headlines Media Matrix</span>
               </h1>
               <p class="text-xl lg:text-2xl text-red-100 leading-relaxed">
                 Four core media platforms, comprehensive digital marketing solutions
               </p>
               <p class="text-lg text-red-50 leading-relaxed max-w-xl">
                 Integrating TNAOT App mobile application, TNAOT.com news website, Chinese social media matrix and overseas social media accounts, building Cambodia's most influential Chinese-Khmer bilingual full-media communication ecosystem
               </p>
            </div>
            
            <!-- CTA buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="#products" class="inline-flex items-center justify-center px-8 py-4 bg-white font-semibold rounded-xl hover:bg-red-50 transition-all duration-200 shadow-lg hover:shadow-xl" style="color: #fa4646">
                View Product Details
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </a>
              <a href="/en/contact" class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-white font-semibold rounded-xl transition-all duration-200" onmouseenter="this.style.backgroundColor='white'; this.style.color='#fa4646'" onmouseleave="this.style.backgroundColor='transparent'; this.style.color='white'">
                Contact Now
              </a>
            </div>
          </div>
          
          <!-- Right statistics -->
          <div class="grid grid-cols-2 gap-6">
            {overallStats.map((stat) => (
              <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center hover:bg-white/20 transition-all duration-300">
                <div class="text-4xl mb-2">{stat.icon}</div>
                <div class="text-3xl lg:text-4xl font-bold mb-2">{stat.value}</div>
                <div class="text-red-100 font-medium">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Product showcase section -->
    <section id="products" class="py-20 bg-gray-50">
      <div class="container mx-auto px-6">
        <div class="max-w-[1400px] mx-auto">
          <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-thin text-gray-900 mb-6 tracking-tight">Our Products</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed font-light">Four core product platforms covering mobile apps, websites and social media</p>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            {products.map((product) => (
              <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden h-auto">
                <!-- Product header -->
                <div class="relative p-6 md:p-8 text-white overflow-hidden" style={
                  product.id === 'tnaot-app' ? "background: linear-gradient(135deg, #fa4646 0%, #e03e3e 100%)" :
                  product.id === 'tnaot-website' ? "background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%)" :
                  product.id === 'china-social' ? "background: linear-gradient(135deg, #059669 0%, #047857 100%)" :
                  product.id === 'overseas-social' ? "background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%)" :
                  "background: linear-gradient(135deg, #fa4646 0%, #e03e3e 100%)"
                }>
                  <!-- Background image -->
                  <div class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-50" style={
                    product.id === 'tnaot-app' ? "background-image: url('/produce/app.jpg')" :
                    product.id === 'tnaot-website' ? "background-image: url('/produce/website.jpg')" :
                    product.id === 'china-social' ? "background-image: url('/media/Chinese_Media/JPZ.png')" :
                    product.id === 'overseas-social' ? "background-image: url('/partner/Harbor.png')" :
                    "background-image: url('/logo.png')"
                  }></div>
                  <!-- Gradient overlay -->
                  <div class="absolute inset-0" style={
                    product.id === 'tnaot-app' ? "background: linear-gradient(135deg, rgba(250, 70, 70, 0.7) 0%, rgba(224, 62, 62, 0.7) 100%)" :
                    product.id === 'tnaot-website' ? "background: linear-gradient(135deg, rgba(37, 99, 235, 0.7) 0%, rgba(29, 78, 216, 0.7) 100%)" :
                    product.id === 'china-social' ? "background: linear-gradient(135deg, rgba(5, 150, 105, 0.7) 0%, rgba(4, 120, 87, 0.7) 100%)" :
                    product.id === 'overseas-social' ? "background: linear-gradient(135deg, rgba(124, 58, 237, 0.7) 0%, rgba(109, 40, 217, 0.7) 100%)" :
                    "background: linear-gradient(135deg, rgba(250, 70, 70, 0.7) 0%, rgba(224, 62, 62, 0.7) 100%)"
                  }></div>
                  <div class="relative z-10 text-center">
                    <div class="text-5xl md:text-6xl mb-4">{product.icon}</div>
                    <h3 class="text-xl md:text-2xl font-semibold mb-2">{product.name}</h3>
                    <p class={
                      product.id === 'tnaot-app' ? "text-red-100 leading-relaxed" :
                      product.id === 'tnaot-website' ? "text-blue-100 leading-relaxed" :
                      product.id === 'china-social' ? "text-green-100 leading-relaxed" :
                      product.id === 'overseas-social' ? "text-purple-100 leading-relaxed" :
                      "text-sm md:text-base leading-relaxed"
                    }>{product.description}</p>
                  </div>
                </div>

                <!-- Data performance -->
                <div class="p-6 bg-gray-50">
                  <h4 class="text-lg font-semibold text-gray-900 mb-4">Data Performance</h4>
                  <div class="grid grid-cols-3 sm:grid-cols-5 gap-2 md:gap-3">
                    {Object.entries(product.stats).map(([key, value]) => (
                      <div class={
                        `text-center p-3 rounded-lg shadow-sm ${
                          product.id === 'tnaot-app' ? 'bg-red-50 border border-red-200' :
                          product.id === 'tnaot-website' ? 'bg-blue-50 border border-blue-200' :
                          product.id === 'china-social' ? 'bg-green-50 border border-green-200' :
                          product.id === 'overseas-social' ? 'bg-purple-50 border border-purple-200' :
                          'bg-red-50 border border-red-200'
                        }`
                      }>
                        <div class={
                          `text-base font-bold ${
                            product.id === 'tnaot-app' ? 'text-red-600' :
                            product.id === 'tnaot-website' ? 'text-blue-600' :
                            product.id === 'china-social' ? 'text-green-600' :
                            product.id === 'overseas-social' ? 'text-purple-600' :
                            'text-red-600'
                          }`
                        }>{value}</div>
                        <div class={
                          `text-xs mt-1 ${
                            product.id === 'tnaot-app' ? 'text-red-500' :
                            product.id === 'tnaot-website' ? 'text-blue-500' :
                            product.id === 'china-social' ? 'text-green-500' :
                            product.id === 'overseas-social' ? 'text-purple-500' :
                            'text-red-500'
                          }`
                        }>
                          {key === 'downloads' && 'Downloads'}
                          {key === 'mau' && 'MAU'}
                          {key === 'dau' && 'DAU'}
                          {key === 'khmerViews' && 'Khmer Views'}
                          {key === 'chineseViews' && 'Chinese Views'}
                          {key === 'totalVisits' && 'Total Visits'}
                          {key === 'chineseVisits' && 'Chinese Visits'}
                          {key === 'pageViews' && 'Page Views'}
                          {key === 'avgTime' && 'Avg Time'}
                          {key === 'totalFollowers' && 'Total Followers'}
                          {key === 'monthlyReads' && 'Monthly Reads'}
                          {key === 'platformsCovered' && 'Platforms'}
                          {key === 'engagement' && 'Engagement'}
                          {key === 'tnaotFacebook' && 'TNAOT FB'}
                          {key === 'tnaotTikTok' && 'TNAOT TK'}
                          {key === 'cambodiaFacebook' && 'Cambodia FB'}
                          {key === 'cambodiaTikTok' && 'Cambodia TK'}
                          {key === 'monthlyReach' && 'Monthly Reach'}
                          {key === 'realTimeUsers' && 'Real-time Users'}
                          {key === 'dataPoints' && 'Data Points'}
                          {key === 'reports' && 'Report Types'}
                          {key === 'accuracy' && 'Accuracy'}
                        </div>
                      </div>
                    ))}
                  </div>
                </div>

                <!-- Advertising services -->
                <div class="p-6">
                  <h4 class="text-lg font-semibold text-gray-900 mb-4">Advertising Services</h4>
                  <div class="ad-content" data-product-id={product.id}>
                    <div class="space-y-4 ad-list" style="max-height: 300px; overflow: hidden; transition: max-height 0.3s ease;">
                      {product.adTypes.map((adType) => (
                      <div class="p-4 border border-gray-200 rounded-lg transition-colors" style="border-color: rgba(250, 70, 70, 0.3)" onmouseenter="this.style.borderColor='#fa4646'" onmouseleave="this.style.borderColor='rgba(250, 70, 70, 0.3)'">
                        <div class="flex gap-4">
                          <!-- Ad effect image -->
                           <div class="flex-shrink-0">
                             <img 
                               src={adType.image} 
                               alt={`${adType.name} effect display`} 
                               class="w-20 h-20 object-cover rounded-lg border border-gray-200 cursor-pointer hover:opacity-80 transition-opacity" 
                               onclick={`openImageModal('${adType.image}', '${adType.name} effect display')`}
                             />
                           </div>
                          
                          <!-- Ad information -->
                          <div class="flex-1">
                            <div class="flex justify-between items-start mb-2">
                              <div class="flex items-center gap-2">
                                {'id' in adType && <span class="px-2 py-1 bg-red-100 text-red-600 text-xs font-medium rounded">{adType.id}</span>}
                                <h5 class="font-semibold text-gray-900">{adType.name}</h5>
                              </div>
                              <span class="font-bold text-sm" style="color: #fa4646">{adType.price}</span>
                            </div>
                            <p class="text-gray-600 text-sm mb-3">{adType.description}</p>
                            
                            <!-- Detailed information -->
                            {('page' in adType || 'quantity' in adType || 'method' in adType || 'size' in adType) && (
                              <div class="grid grid-cols-2 gap-2 text-xs text-gray-500">
                                {'page' in adType && (
                                  <div class="flex items-center gap-1">
                                    <span class="font-medium">Page:</span>
                                    <span>{adType.page}</span>
                                  </div>
                                )}
                                {'quantity' in adType && (
                                  <div class="flex items-center gap-1">
                                    <span class="font-medium">Quantity:</span>
                                    <span>{adType.quantity}</span>
                                  </div>
                                )}
                                {'method' in adType && (
                                  <div class="flex items-center gap-1 col-span-2">
                                    <span class="font-medium">Method:</span>
                                    <span>{adType.method}</span>
                                  </div>
                                )}
                                {'size' in adType && (
                                  <div class="flex items-center gap-1 col-span-2">
                                    <span class="font-medium">Size:</span>
                                    <span>{adType.size}</span>
                                  </div>
                                )}
                              </div>
                            )}
                          </div>
                        </div>
                        </div>
                      ))}
                    </div>
                    
                    <!-- View more button -->
                    <div class="mt-4 text-center">
                      <button 
                        class={
                          product.id === 'tnaot-app' ? "expand-btn text-sm text-gray-600 hover:text-red-600 transition-colors duration-200 flex items-center justify-center mx-auto gap-1" :
                          product.id === 'tnaot-website' ? "expand-btn text-sm text-gray-600 hover:text-blue-600 transition-colors duration-200 flex items-center justify-center mx-auto gap-1" :
                          product.id === 'china-social' ? "expand-btn text-sm text-gray-600 hover:text-green-600 transition-colors duration-200 flex items-center justify-center mx-auto gap-1" :
                          product.id === 'overseas-social' ? "expand-btn text-sm text-gray-600 hover:text-purple-600 transition-colors duration-200 flex items-center justify-center mx-auto gap-1" :
                          "expand-btn text-sm text-gray-600 hover:text-red-600 transition-colors duration-200 flex items-center justify-center mx-auto gap-1"
                        }
                        onclick="toggleAdContent(this)"
                      >
                        <span class="expand-text">View More</span>
                        <svg class="w-4 h-4 expand-icon transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                      </button>
                    </div>
                  </div>
                  
                    <!-- Ad consultation button -->
                    <div class="mt-6">
                      <a href={`/en/contact?product=${product.id}`} class="w-full text-white py-3 px-6 rounded-lg font-semibold transition-all duration-200 flex items-center justify-center space-x-2" style={
                        product.id === 'tnaot-app' ? "background: linear-gradient(135deg, #fa4646 0%, #e03e3e 100%)" :
                        product.id === 'tnaot-website' ? "background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%)" :
                        product.id === 'china-social' ? "background: linear-gradient(135deg, #059669 0%, #047857 100%)" :
                        product.id === 'overseas-social' ? "background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%)" :
                        "background: linear-gradient(135deg, #fa4646 0%, #e03e3e 100%)"
