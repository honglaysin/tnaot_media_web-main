---

<Layout title={serviceDetails.title}>
  <Header />
  
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-blue-600 via-blue-700 to-purple-800 text-white overflow-hidden">
      <!-- Background Image -->
