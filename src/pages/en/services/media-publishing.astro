        </div>
        
        <div class="grid lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
          {serviceDetails.services.map((service, index) => (
            <div class={`relative bg-white rounded-2xl p-8 transition-all duration-300 hover:scale-105 hover:shadow-2xl ${
              service.popular 
                ? 'ring-2 ring-blue-500 shadow-xl bg-gradient-to-br from-blue-50 to-white' 
                : 'shadow-lg border border-gray-200'
            }`}>
              {service.popular && (
                <div class="absolute -top-3 -right-3">
