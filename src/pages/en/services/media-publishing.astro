      </div>
      
      <!-- Main Content -->
      <div class="container relative z-10 py-24">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div class="space-y-8">
            <div class="space-y-6">
              <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm font-medium">
                <span class="w-2 h-2 bg-green-400 rounded-full mr-2 animate-pulse"></span>
                Professional Media Services
              </div>
              <h1 class="text-4xl lg:text-6xl font-bold leading-tight">
                <span class="block">{serviceDetails.title}</span>
              </h1>
              <p class="text-xl lg:text-2xl text-blue-100 leading-relaxed">
                {serviceDetails.subtitle}
              </p>
              <p class="text-lg text-blue-50 leading-relaxed max-w-xl">
                {serviceDetails.description}
              </p>
            </div>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="#pricing" class="inline-flex items-center justify-center px-8 py-4 bg-white text-blue-600 font-semibold rounded-xl hover:bg-blue-50 transition-all duration-200 shadow-lg hover:shadow-xl">
                View Pricing Plans
