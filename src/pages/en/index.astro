---

<Layout 
  title={seoConfig.title}
  description={seoConfig.description}
  keywords={seoConfig.keywords}
  image={seoConfig.image}
  type={seoConfig.type}
>
  <Header />
  
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-red-50 to-pink-100 section-padding overflow-hidden">
      <!-- Background Decoration Image -->
      <div class="absolute inset-0 opacity-10">
        <img src="https://images.unsplash.com/photo-1557804506-669a67965ba0?w=1920&h=1080&fit=crop" alt="Background" class="w-full h-full object-cover" />
      </div>
      <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="text-center lg:text-left">
            <h2 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
              <span class="text-primary-600">{t('home.hero.title')}</span>
            </h2>
            <p class="text-xl text-gray-600 mb-8 leading-relaxed">
              {t('home.hero.description')}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
              <a href={lang === 'zh' ? '/contact' : '/en/contact'} class="btn-primary text-lg py-4 px-8">
                {t('home.hero.contact')}
              </a>
              <a href={lang === 'zh' ? '/cases' : '/en/cases'} class="btn-secondary text-lg py-4 px-8">
                {t('home.hero.learn')}
              </a>
            </div>
          </div>
          <div class="hidden lg:block relative">
            <!-- Scrolling Image Container -->
            <div id="hero-carousel" class="relative w-full h-96 rounded-2xl shadow-2xl overflow-hidden">
              <div id="carousel-track" class="absolute inset-0 flex transition-transform duration-500 ease-in-out">
                <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=600&h=400&fit=crop" alt={t('home.carousel.teamwork')} class="w-full h-full object-cover flex-shrink-0" />
                <img src="https://images.unsplash.com/photo-1600880292203-757bb62b4baf?w=600&h=400&fit=crop" alt={t('home.carousel.professional')} class="w-full h-full object-cover flex-shrink-0" />
                <img src="https://images.unsplash.com/photo-1557804506-669a67965ba0?w=600&h=400&fit=crop" alt={t('home.carousel.meeting')} class="w-full h-full object-cover flex-shrink-0" />
                <img src="https://images.unsplash.com/photo-1542744173-8e7e53415bb0?w=600&h=400&fit=crop" alt={t('home.carousel.creative')} class="w-full h-full object-cover flex-shrink-0" />
              </div>
              <!-- Gradient Overlay -->
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-transparent to-red-100/20"></div>
            </div>
            
            <!-- Circle Dot Navigation -->
            <div class="flex justify-center mt-6 space-x-3">
              <button class="carousel-dot w-3 h-3 rounded-full bg-red-600 transition-all duration-300" data-slide="0"></button>
              <button class="carousel-dot w-3 h-3 rounded-full bg-gray-300 hover:bg-red-400 transition-all duration-300" data-slide="1"></button>
              <button class="carousel-dot w-3 h-3 rounded-full bg-gray-300 hover:bg-red-400 transition-all duration-300" data-slide="2"></button>
              <button class="carousel-dot w-3 h-3 rounded-full bg-gray-300 hover:bg-red-400 transition-all duration-300" data-slide="3"></button>
            </div>
          </div>
        </div>
      </div>
    </section>



    <!-- Competitive Advantages Display -->
    <section class="bg-gray-50 section-padding">
      <div class="container relative z-10">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            {t('home.advantages.title')}
